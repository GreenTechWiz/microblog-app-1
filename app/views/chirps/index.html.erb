<div id="chirp-feed">
  <h1>Your Chirps Feed:</h1>

  <% @chirps.each do |chirp| %>
    <div class="chirp">
      <big><%= chirp.user.first_name %> <%= chirp.user.last_name %></big>
      <small><%= chirp.formatted_time %></small>
      <p><%= link_to("#{chirp.content}", "/chirps/#{chirp.id}") %></p>
    </div>
  <% end %>
</div>